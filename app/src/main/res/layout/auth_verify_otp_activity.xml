<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:fillViewport="true"
    tools:context=".ui.auth.VerifyOTPActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Nút Back -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/button_white_shadow"
            android:contentDescription="@string/back"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/baseline_arrow_back_24"
            app:tint="#000000" />

        <!-- Card OTP -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@drawable/white_box"
            android:elevation="8dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Nhập mã xác nhận"
                android:textColor="#1F2024"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Một mã xác nhận đã được gửi đến"
                android:textColor="#71727A"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="email@example.com"
                android:textColor="#1F2024"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- 4 Ô NHẬP OTP -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/otp1"
                    style="@style/OtpBoxStyle" />

                <EditText
                    android:id="@+id/otp2"
                    style="@style/OtpBoxStyle" />

                <EditText
                    android:id="@+id/otp3"
                    style="@style/OtpBoxStyle" />

                <EditText
                    android:id="@+id/otp4"
                    style="@style/OtpBoxStyle" />

                <EditText
                    android:id="@+id/otp5"
                    style="@style/OtpBoxStyle" />

                <EditText
                    android:id="@+id/otp6"
                    style="@style/OtpBoxStyle" />
            </LinearLayout>

            <!-- Thời gian hiệu lực -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thời gian hiệu lực: "
                    android:textColor="#71727A"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60s"
                    android:textColor="#E53935"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/textResend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Gửi lại mã xác nhận"
                android:textColor="#6BA67B"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Nút Tiếp tục -->
            <TextView
                android:id="@+id/btnContinue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_style"
                android:gravity="center"
                android:paddingVertical="12dp"
                android:text="Tiếp tục"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>