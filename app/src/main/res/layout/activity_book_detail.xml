<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAF4ED"
    tools:context=".ui.book.BookDetail">

    <!-- Nội dung chính -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="90dp"
        android:background="#EAF4ED"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_back" />

                <TextView
                    android:id="@+id/bookTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Eighty six vol 9 : Valkyrie Has Landed"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:maxLines="2" />

                <ImageView
                    android:id="@+id/btnFavorite"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_heart_black" />
            </LinearLayout>

            <!-- Cover + Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bookImage"
                    android:layout_width="120dp"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_illust1" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView android:text="Name" android:textStyle="bold" android:textColor="#000" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                    <TextView android:id="@+id/bookName" android:text="Eighty Six" android:layout_marginBottom="4dp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>

                    <TextView android:text="Author" android:textStyle="bold" android:textColor="#000" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                    <TextView android:id="@+id/bookAuthor" android:text="Asato Asato" android:layout_marginBottom="4dp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>

                    <TextView android:text="State" android:textStyle="bold" android:textColor="#000" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                    <TextView android:id="@+id/bookState" android:text="Loading..." android:layout_marginBottom="4dp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>

                    <TextView android:text="Last updated" android:textStyle="bold" android:textColor="#000" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                    <TextView android:id="@+id/bookDate" android:text="February 22, 2022" android:layout_marginBottom="4dp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>

                    <TextView android:text="New chapter" android:textStyle="bold" android:textColor="#000" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                    <TextView android:id="@+id/bookNewChapter" android:text="No" android:layout_marginBottom="4dp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>

                    <TextView android:text="Genre" android:textStyle="bold" android:textColor="#000" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                    <TextView android:id="@+id/bookGenre"
                        android:text="Action | Drama | Mecha | Mystery | Romance | Sci-fi | Supernatural | Tragedy" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Tabs -->
            <LinearLayout
                android:id="@+id/tabContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/tabOverviewContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tabOverview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Overview"
                        android:textStyle="bold"
                        android:textColor="#3A785D"
                        android:padding="8dp"/>

                    <View
                        android:id="@+id/indicatorOverview"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#3A785D"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tabChapterContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tabChapter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chapter"
                        android:textStyle="bold"
                        android:textColor="#9E9E9E"
                        android:padding="8dp"/>

                    <View
                        android:id="@+id/indicatorChapter"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#00FFFFFF"/>
                </LinearLayout>
            </LinearLayout>

            <!-- OVERVIEW -->
            <LinearLayout
                android:id="@+id/layoutOverview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:text="Summary"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_marginTop="12dp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>

                <TextView
                    android:id="@+id/bookSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#333"
                    android:layout_marginTop="4dp"
                    android:text="LIKE LOOKING IN A MIRROR...\n\nFor better or worse, the battle with the Noctiluca has drawn to a close..."/>

                <TextView
                    android:text="Illustration"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_marginTop="16dp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>

                <GridLayout
                    android:id="@+id/imageContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:useDefaultMargins="true" />
            </LinearLayout>

            <!-- CHAPTER -->
            <LinearLayout
                android:id="@+id/layoutChapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/chapterContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Nút Continue cố định -->
    <TextView
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:text="Continue read"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:background="@drawable/bg_button_continue"
        android:elevation="8dp"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp"
        tools:ignore="RtlCompat" />
</FrameLayout>
