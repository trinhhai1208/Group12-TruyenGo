<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:padding="16dp"
    tools:context=".ui.main.AccountFragment">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account"
        android:textAlignment="center"
        android:textColor="#1F2024"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_person"
            android:background="@drawable/circle_bg"
            android:scaleType="centerInside"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Viết Doanh"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#1F2024" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="?android:attr/listDivider"
        android:showDividers="middle"
        android:layout_marginTop="50dp">

        <LinearLayout
            style="@style/AccountItemContainer"
            android:id="@+id/itemAccountManagement">
            <TextView
                android:text="Quản lý tài khoản"
                style="@style/AccountItemText" />
            <ImageView
                android:src="@drawable/ic_arrow_right"
                style="@style/AccountItemIcon" />
        </LinearLayout>

        <LinearLayout
            style="@style/AccountItemContainer"
            android:id="@+id/itemChangePassword">
            <TextView
                android:text="Đổi mật khẩu"
                style="@style/AccountItemText" />
            <ImageView
                android:src="@drawable/ic_arrow_right"
                style="@style/AccountItemIcon" />
        </LinearLayout>

        <LinearLayout
            style="@style/AccountItemContainer"
            android:id="@+id/itemForgotPassword">
            <TextView
                android:text="Quên mật khẩu"
                style="@style/AccountItemText" />
            <ImageView
                android:src="@drawable/ic_arrow_right"
                style="@style/AccountItemIcon" />
        </LinearLayout>

        <LinearLayout
            style="@style/AccountItemContainer"
            android:id="@+id/itemChangeTheme">
            <TextView
                android:text="Đổi màu nền"
                style="@style/AccountItemText" />
            <ImageView
                android:src="@drawable/ic_arrow_right"
                style="@style/AccountItemIcon" />
        </LinearLayout>

        <LinearLayout
            style="@style/AccountItemContainer"
            android:id="@+id/itemAboutApp">
            <TextView
                android:text="Thông tin ứng dụng, hỗ trợ"
                style="@style/AccountItemText" />
            <ImageView
                android:src="@drawable/ic_arrow_right"
                style="@style/AccountItemIcon" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="100dp">
        <TextView
            android:id="@+id/btnDeleteAccount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:height="46dp"
            android:text="Xóa tài khoản"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#A4C18B"
            android:background="@drawable/btn_outline" />

        <Space
            android:layout_width="8dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/btnLogout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:height="46dp"
            android:gravity="center"
            android:text="Đăng xuất"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_green" />
    </LinearLayout>

</LinearLayout>